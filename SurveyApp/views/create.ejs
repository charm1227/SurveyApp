    <script language="JavaScript">

        let questions = [];

        function addQuestion() {
            var surveyQuestionsList = document.getElementById('survey_questions_list');
            const qIndex = questions.length;

            // create question
            var question = document.createElement('li');
            question.class = 'question';
            question.id = 'q' + qIndex;
            surveyQuestionsList.appendChild(question);

            //tf radio
            var tfRadio = document.createElement('input');
            tfRadio.type = 'radio';
            tfRadio.name = 'questionType' + qIndex;
            tfRadio.onclick = 'tfSelected()';
            tfRadio.checked = 'checked';
            question.appendChild(tfRadio);

            var tfLabel = document.createElement('label');
            tfLabel.innerHTML = 'true/false';
            question.appendChild(tfLabel);

            // mc radio
            var mcRadio = document.createElement('input');
            mcRadio.type = 'radio';
            mcRadio.name = 'questionType' + qIndex;
            mcRadio.onclick = 'mcSelected()';
            question.appendChild(mcRadio);

            var mcLabel = document.createElement('label');
            mcLabel.innerHTML = 'multiple choice';
            question.appendChild(mcLabel);

            // fr radio
            var frRadio = document.createElement('input');
            frRadio.type = 'radio';
            frRadio.name = 'questionType' + qIndex;
            frRadio.onclick = 'frSelected()';
            question.appendChild(frRadio);

            var frLabel = document.createElement('label');
            frLabel.innerHTML = 'free response';
            question.appendChild(frLabel);

            // question field
            var questionField = document.createElement('input');
            questionField.innerHTML = 'Enter question here';
            questionField.type = 'text';
            questionField.placeholder = 'Enter Question...';
            question.appendChild(questionField);

            // delete question button
            var delBtn = document.createElement('input');
            delBtn.type = 'image';
            delBtn.src = 'icons/minus_icon.png';
            delBtn.alt = 'delete question';
            delBtn.addEventListener('click', () => {
                deleteQuestion('q' + qIndex);
            });
            question.appendChild(delBtn);

            questions.push(question);
        }

        function deleteQuestion(id) {
            var surveyQuestionsList = document.getElementById('survey_questions_list'); 
            var question = document.getElementById(id);
